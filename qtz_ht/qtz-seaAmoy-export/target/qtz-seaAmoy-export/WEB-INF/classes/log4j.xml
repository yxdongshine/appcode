<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM 
          "http://logging.apache.org/log4j/1.2/apidocs/org/apache/log4j/xml/doc-files/log4j.dtd">
          
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
	<!-- log文件保存到web应用服务器的bin目录下,每个文件最大为10MB,支持10个文件 E:\\logs\\logs -->
	<appender name="App" class="org.apache.log4j.RollingFileAppender">
		<param name="threshold" value="debug" />
		<param name="File" value="e:\\logs\\app\\app_web.log" />
		<param name="MaxFileSize" value="3MB" />
		<param name="MaxBackupIndex" value="100" />
		<param name="append" value="true" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern"
				value="ht_supp[%d{yyyy-MM-dd HH:mm:ss,SSS}]>>%-5p>> [%m] - [%c] -%-4r [%t] %x %n" />
		</layout>
	</appender>
	<appender name="App_day" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="threshold" value="debug" />
		<param name="File" value="e:\\logs\\app\\app_web.log" />
		<param name="DatePattern" value="'.'yyyy-MM-dd'.log'" />
		<param name="append" value="true" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern"
				value="ht_supp[%d{yyyy-MM-dd HH:mm:ss,SSS}]>>%-5p>> [%m] - [%c] -%-4r [%t] %x %n" />
		</layout>
	</appender>
	<!-- 控制台输出 -->
	<appender name="Console" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern"
				value="ht_supp[%d{yyyy-MM-dd HH:mm:ss,SSS}]>>%-5p>> [%m] - [%c] -%-4r [%t] %x %n" />
		</layout>
	</appender>
	<!-- dubbo日志 -->
	<logger name="com.alibaba.dubbo" additivity="false">
		<level value="info" />
		<appender-ref ref="console"/>
	</logger>
	<logger name="org.apache.zookeeper.ClientCnxn" additivity="false">
		<level value="info" />
		<appender-ref ref="console"/>
	</logger>
	
<!-- 	<appender name="ASYNC" class="org.apache.log4j.AsyncAppender"> -->
<!-- 		<param name="BufferSize" value="256" /> -->
<!-- 		<appender-ref ref="DATABASE" /> -->
<!-- 	</appender> -->
	
	<!-- 配置控制台与文件日志 -->
	<root>
		<priority value="debug" />
		<appender-ref ref="App_day" />
		<appender-ref ref="Console" />
	</root>
	
</log4j:configuration>